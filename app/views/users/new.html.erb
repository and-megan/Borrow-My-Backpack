<h2>Sign Up</h2>

<form action="<%= users_url %>" method="post">
  <%= auth_token_input %>

  <label for="user_email">
    Email
    <input type="text" name="user[email]" value="" id="user_email">
  </label>
  <br>
  <label for="user_password">
    Password
    <input type="password" name="user[password]" value="">
  </label>
  <br>
  <label for="user_fname">
    First Name
    <input type="text" name="user[fname]" value="">
  </label>
  <label for="user_lname">
    Last Name
    <input type="text" name="user[lname]" value="">
  </label>
  <label for="user_current_city">
    Current City
    <input type="text" name="user[current_city]" value="">
  </label>

  <input type="submit" value="Sign Up">
</form>
